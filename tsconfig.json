{
  "compilerOptions": {
    // Use modern JS but compatible with current Node.js
    "target": "ES2020",
    "module": "CommonJS",

    // Use modern language features
    "lib": ["ESNext"],

    // Root and output directories
    "rootDir": ".",
    "outDir": "./dist",

    // Module resolution settings for monorepos
    "moduleResolution": "Node",
    "baseUrl": ".", 
    "paths": {
      "@space-x/shared/Launch": ["shared/types/Launch.ts"],
      "@space-x/shared/Launchpad": ["shared/types/Launchpad.ts"],
      "@space-x/shared/Rocket": ["shared/types/Rocket.ts"],
      "@space-x/shared/logger": ["shared/utils/logger.ts"]
    },
    "typeRoots": ["./node_modules/@types"],

    // Compatibility flags
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    // Strictness
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "shared/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}
