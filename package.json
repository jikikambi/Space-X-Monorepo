{
  "name": "space-x-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "src/gateway",
    "src/react-app",
    "src/vue-app"
  ],
  "scripts": {
    "dev:gateway": "npm run dev --workspace=gateway",
    "dev:react": "npm run dev --workspace=react-app",
    "dev:vue": "npm  run dev --workspace vue-app",
    "build": "npm run build --workspaces",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./dist/output.css --watch",
    "dev": "concurrently \"npm:dev:gateway\" \"npm:dev:react\" \"npm:dev:vue\"",
    "test": "npm --workspace gateway test",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "axios": "^1.10.0",
    "body-parser": "^2.2.0",
    "bootstrap": "^5.3.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.4.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.0.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "tailwindcss-cli": "^0.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
